@model IEnumerable<Talent.Topper.UI.Models.CompanyEntity>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/dataTable")
@Scripts.Render("~/bundles/bootstrap")
  <!-- Bootstrap CSS CDN -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<!-- Our Custom CSS -->
<link rel="stylesheet" href="~/Content/style.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.jqueryui.min.css">
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<div class="col-md-12">
    <div class="table-responsive" id="searchResults">
        <table class="table table-striped table-hover" id="CompanyListTbl">
            <thead>
                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.CompanayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebsiteURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th style="width:80px;">Proceed</th>
                    <th style="width:100px;">Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebsiteURL)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.IsActive)*@
                        @if (item.IsActive == 1)
                        {
                            <p style="color:black;">Active</p>
                        }
                        else
                        {
                            <p style="color:black;">In-Active</p>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Proceed", "Proceed")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit") |
                        @Html.ActionLink("Delete", "Delete")
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShortTable();
    });

    function ShortTable() {
        $("#CompanyListTbl").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            dom: 'C<"clear">lfrtip',
            colVis: {
                exclude: [0]
            }
        });
    }
</script>
