@model IEnumerable<Talent.Topper.UI.Models.CompanyEntity>

@{
    ViewBag.Title = "Talent Topper: Company Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Company Details</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebsiteURL)
        </th>
        <th style="width:150px;"> Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteURL)
            </td>            
            <td>
                @Html.ActionLink("Active", "Active", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Proceed", "Proceed", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
