@model IEnumerable<Talent.Topper.UI.Models.CompanyEntity>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/dataTable")
@{
    ViewBag.Title = "Talent Topper: Company Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<u><h4 style="text-align:center;">Company List</h4></u>
<br />
<div class="col-md-12" style="margin-bottom:40px;">
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-11">
                <input type="text" value="" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" value="Search" class="btn  btn-primary" />
                @*<input type="button" title="Delete" value="D" onclick="location.href='@Url.Action("CompanyList", "Company")'" />*@
            </div>
        </div>
    </div>
</div>
 
<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="CompanyListTbl">
            <thead>
                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.CompanayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebsiteURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th style="width:80px;">Proceed</th>
                    <th style="width:100px;">Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebsiteURL)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.IsActive)*@
                        @if (item.IsActive == 1)
                        {
                            <p style="color:black;">Active</p>
                        }
                        else
                        {
                            <p style="color:black;">In-Active</p>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Proceed", "Proceed")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit") |
                        @Html.ActionLink("Delete", "Delete")
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShortTable();
    });

    function ShortTable() {
        $("#CompanyListTbl").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            dom: 'C<"clear">lfrtip',
            colVis: {
                exclude: [0]
            }
        });
    }
</script>
