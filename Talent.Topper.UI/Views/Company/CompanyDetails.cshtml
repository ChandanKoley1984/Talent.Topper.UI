            @*<div class="col-md-11">
                <input type="text" value="" class="form-control" id="search_text" />
            </div>*@
        @*</div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" value="Search" class="btn  btn-primary" id="search" />*@
