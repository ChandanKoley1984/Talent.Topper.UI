@model IEnumerable<Talent.Topper.UI.Models.CompanyEntity>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/dataTable")
@{
    ViewBag.Title = "Talent Topper: Company Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<u><h4 style="text-align:center;">Company List</h4></u>
<br />
<div class="form-horizontal">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="CompanyListTbl">
            <thead>
                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.CompanayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebsiteURL)
                    </th>
                    <th style="width:150px;"> Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebsiteURL)
                    </td>
                    <td>
                        @Html.ActionLink("Active", "Active") |
                        @Html.ActionLink("Proceed", "Proceed")
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShortTable();
    });

    function ShortTable() {
        $("#CompanyListTbl").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            dom: 'C<"clear">lfrtip',
            colVis: {
                exclude: [0]
            }
        });
    }
</script>