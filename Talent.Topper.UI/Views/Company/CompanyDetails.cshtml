            @*</div>
        </div>
    </div>*@
</div>

<div class="col-md-12">
    <div class="table-responsive" id="searchResults">
        <table class="table table-striped table-hover" id="CompanyListTbl">
            <thead>
                <tr class="table-primary">
                    <th style=" display: none;">
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebsiteUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th style=" display: none;">
                        @Html.DisplayNameFor(model => model.Active_Status)
                    </th>
                    <th style="width:80px;">Proceed</th>
                    <th style="width:100px;">Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
        <tr>
            <td style=" display: none;">
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteUrl)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.IsActive)*@
                <p style="color:black;">Active</p>
            </td>
            <td style=" display: none;">
                @Html.DisplayFor(modelItem => item.Active_Status)
            </td>
            <td>
                @Html.ActionLink("Proceed", "Proceed")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete")
            </td>
        </tr>
            }
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShortTable();
    });

    function ShortTable() {
        $("#CompanyListTbl").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            dom: 'C<"clear">lfrtip',
            colVis: {
                exclude: [0]
            }
        });
    }

